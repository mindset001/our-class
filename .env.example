# Environment variables declared in this file are available at build time and runtime.
# Don't include secrets in this file or check it into version control.

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/our_class_db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
BCRYPT_ROUNDS=12

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Video Hosting (Cloudinary example)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# App Configuration
NEXT_PUBLIC_APP_NAME="Our Class"
NEXT_PUBLIC_APP_URL="http://localhost:3000"